@model RegisterViewModel;

<div class="row">
    <form asp-controller="Account" asp-action="Register" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h4 class="text-center">Sign up with Your Credentials</h4>
        <div class="form-group" style="margin:20px 0">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" placeholder="Please enter a username" class="form-control">
        </div>
        <div class="form-group" style="margin:20px 0">
            <label asp-for="Email"></label>
            <input asp-for="Email" type="email" placeholder="somebody@example.com" class="form-control">
        </div>
        <div class="form-group" style="margin:20px 0">
        <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control">
        </div>
        <div class="form-group" style="margin:20px 0">
            <label asp-for="confirmPassword"></label>
            <input asp-for="confirmPassword" type="password" class="form-control">
        </div>
        <input type="submit" class="button" value="Sign up" />
        <br />
        <a href="/Account/Login">Already have an account? Login</a>
    </form>
</div>

